# Aliases gerais
alias zshconfig="vim ~/.dotfiles/zsh/.zshrc"
alias .zsh="source ~/.dotfiles/zsh/.zshrc"
alias vimconfig="vim ~/.dotfiles/vim/.vimrc"
alias updatea="sudo pacman -Syu --noconfirm && pacaur -Syu --noconfirm"
alias updateu="sudo apt-get update -y && sudo apt-get full-upgrade -y"
alias pathogen="cd ~/.dotfiles/vim/bundle"
alias tmuxconfig="vim ~/.dotfiles/tmux/tmux.conf"
alias addalias="vim ~/.dotfiles/zsh/.alias"
